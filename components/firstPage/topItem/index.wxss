.top {
  position: sticky;
  top: 0;
  left: 0;
  padding-top: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  background-color: #03A2E3;
  z-index: 999;
}

.topitem {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.itemImg {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.title {
  padding: 20rpx 0;
  color: white;
}



.main {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}