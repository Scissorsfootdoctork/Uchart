/* pages/moneySort/index.wxss */
.container{
	width: 100%;
	position: relative;
}

.title{
	display: flex;
	padding: 30rpx 0;
	justify-content: space-evenly;
	color:#303133;
	background-color: #F2F6FC;
	border-bottom: 1px solid var(--weui-FG-3);
	position: sticky;
	top: 0;
	left: 0;
}
.name, .main-item{
	flex: 1;
	text-align: center;
}
.main {
	display: flex;
	padding: 25rpx 0;
	align-items: center;
	justify-content: space-evenly;
	color:#606266;
	border-bottom: 1px solid var(--weui-FG-3);
}

.pickerTime{
	color: #303133;
	font-size: 32rpx;
	padding:20rpx 30rpx;
	background-color: rgb(242, 242, 242);
	border-bottom: 1px solid var(--weui-FG-3);
	position: sticky;
	top: 0;
	left: 0;
	display: flex;
}

.picker{
	display: flex;
	align-items: center;
}

.picker-right{
margin-top: 10rpx;
font-size: 26rpx;
}

.sortImg{
	width: 70rpx;
	height: 70rpx;
}


