.wrapper{
	width: 100%;
	padding: 30rpx;
	display: flex;
	box-sizing: border-box;
	border-bottom: 1px solid var(--weui-FG-3);
}

.avatar{
	width: 135rpx;
	height: 135rpx;
	border-radius: 10rpx;
	overflow: hidden;
}

.avatar-img{
	width: 100%;
	height: 100%;
	display: block;
}

.detail{
	flex: 1;
	padding: 0 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	color: #909399;
}

.name{
	color: #303133;
	font-size: 30rpx;
	font-weight: bold;
}

.phone{
	color: #606266;
	font-size: 26rpx;
}

.phone-detail{
	color: #303133;
}

.change, .change1{
	color: #777777;
	font-size: 26rpx;
}

.state1{
	color: #409EFF;
}

.state2{
	color: #E6A23C;
}

.state3{
	color: #67C23A;
}

.state4{
	color: #F56C6C;
}