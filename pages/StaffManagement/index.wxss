/* pages/moneySort/index.wxss */
.container{
	width: 100%;
	position: relative;
}

.wrapper{
	width: 100%;
	padding: 30rpx;
	display: flex;
	box-sizing: border-box;
	border-bottom: 1px solid var(--weui-FG-3);
}

.avatar{
	width: 135rpx;
	height: 135rpx;
	border-radius: 10rpx;
	overflow: hidden;
}

.avatar-img{
	width: 100%;
	height: 100%;
	display: block;
}

.detail{
	flex: 1;
	padding: 0 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;

}

.name{
	color: #303133;
	font-size: 30rpx;
	font-weight: bold;
}

.phone{
	color: #606266;
	font-size: 26rpx;
}

.change, .change1{
	color: #777777;
	font-size: 26rpx;
}


.addWrapper{
	position: fixed;
	right: 20rpx;
	bottom: 20rpx;
	width: 90rpx;
	height: 90rpx;
	display: flex;
	z-index: 99;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	background-color: rgb(21, 150, 219);
	box-sizing: border-box;
 box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04)
}
.searchText{
	color: white;
	font-size: 34rpx;
}
.editBox{
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.change{
	display: block;
	color: white;
	background-color: #03A2E3;
	padding: 10rpx 30rpx;
	border-radius: 10rpx;
}

.change1{
	color: white;
	display: block;
	background-color: #F56C6C;
	padding: 10rpx 30rpx;
	border-radius: 10rpx;
}

.boxs{
	padding: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size: 22rpx;
	color: #777777;
}