.container {
	width: 100%;
	height: 100%;
	position: absolute;
	bottom: 0;
	left: 0;
	overflow: hidden;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}

.top-msg {
	width: 100%;
}

.title1,
.title2,
.title3 {
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 40rpx;
	font-size: 30rpx;
	color: #606266;
	display: flex;
	border-bottom: 1px solid var(--weui-FG-3);
}

.title1 {
	font-size: 38rpx;
	color: #303133;
}

.name, .name12 {
	display: block;
	font-size: 30rpx;
	color: #777777;
}
.changeItem {
	display: flex;
	padding: 20rpx;
	align-items: center;
	justify-content: center;
	border-bottom: 1px solid var(--weui-FG-3);
}
.name12{
	width: 130rpx;
	margin-right: 40rpx;
}

.detail {
	box-sizing: border-box;
	flex: 1;
	display: block;
	padding: 0 40rpx;
}

.midele-title {
	box-sizing: border-box;
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
	padding: 10rpx 40rpx;
	background-color: #EBEEF5;
	border-bottom: 1px solid var(--weui-FG-3);
	z-index: 99;
	box-sizing: border-box;
	font-size: 35rpx;
}

.title-namw{
	color: #777777;
	margin-right: 20rpx;
	font-size: 30rpx;
}

.scroll-wrapper {
	flex: 1;
	box-sizing: border-box;
	padding: 20rpx;
	display: flex;
	flex-direction: column;
	overflow: hidden;
	overflow-y: scroll;
}

.btn-area {
	border-top: 1px solid var(--weui-FG-3);
	box-sizing: border-box;
	width: 100%;
	padding: 20rpx;
	height: 137rpx;
}


.btn {
	background-color: rgb(21, 150, 219);
	color: white;
	letter-spacing: 10rpx;
}

.process{
	box-sizing: border-box;
	padding: 20rpx;
	width: 100%;
	display: flex;
	border-bottom: 1px solid var(--weui-FG-3);
}

.processName, .Name{
	flex: 1;
	display: flex;
	align-items: center;
	font-size: 28rpx;
}

.numTiele{
	flex: 1;
	text-align: right;
	color: #777777;
}

.Num1{
	width: 120rpx;
	margin-right: 15rpx;
}

.Num2{
	margin-right: 90rpx;
}

.weui-input{
	border: 1px solid var(--weui-FG-3);
	padding: 10rpx 20rpx;
	width: 120rpx;
	margin-left: 20rpx;
	text-align: center;
	border-radius: 10rpx;
	background-color: #f2f3f5;
}
