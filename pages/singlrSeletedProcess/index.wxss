.container{
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.top-msg{
  width: 100%;
}
.title1, .title2, .title3{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  color: #606266;
  display: flex;
  border-bottom: 1px solid var(--weui-FG-3);
}

.name{
  display: block;
  width: 100rpx;
}
.detail{
  box-sizing: border-box;
  flex: 1;
  color: #303133;
  display: block;
  padding: 0 20rpx;
}

.midele-title {
	box-sizing: border-box;
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
	padding: 10rpx 40rpx;
	background-color: #EBEEF5;
	border-bottom: 1px solid var(--weui-FG-3);
	z-index: 99;
	box-sizing: border-box;
}

.labelItem{
  box-sizing: border-box;
  border-bottom: 1px solid var(--weui-FG-3);
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
}

.label-item{
  flex: 1;
  text-align: left;
}
.right{
  text-align: right;
}

.scroll-wrapper{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
  overflow-y: scroll;
}

.btn-area{
  border-top: 1px solid var(--weui-FG-3);
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 40rpx;
}

.right{
  width: 40rpx;
  padding-left: 50rpx;
}


.btn{
	background-color: rgb(21, 150, 219);
	color: white;
	letter-spacing: 10rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: rgb(21, 150, 219);
}

.check-wrapper{
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid var(--weui-FG-3);
}

.weui-input{
  margin-left: 10rpx;
  width: 150rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #f2f3f5;
}